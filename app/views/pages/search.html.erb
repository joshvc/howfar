<h2>Driving Distance From <%= @segments.first.origin %></h2>
<table>
<% @segments.each do |segment| %>
  <% unless segment.distance == "1 ft" %>
    <tr>
      <td>
        <%= link_to segment.destination, segment.map_link %>
      </td>
      <td>
        <%= segment.distance %>
      </td>
      <td>
        <%= segment.drive_time %>
      </td>
    </tr>
  <% end %>
<% end %>